# BengoERP Backend Configuration
# ==============================
# Copy this file to .env and update with your actual values
# Never commit actual .env file - only .env.example

# Django Settings
DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here-generate-with-django-insecure-for-dev
ALLOWED_HOSTS=localhost,127.0.0.1,*.masterspace.co.ke
ENVIRONMENT=production

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=bengoerp_db
DB_USER=postgres
DB_PASSWORD=your-postgres-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/2

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://erp.masterspace.co.ke
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://erp.masterspace.co.ke
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=gadmin@masterspace.co.ke
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@bengoerp.com

# SMS Configuration (Africa's Talking)
AFRICAS_TALKING_API_KEY=your-africas-talking-api-key
AFRICAS_TALKING_USERNAME=your-africas-talking-username
SMS_PROVIDER=AFRICASTALKING

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_PASSKEY=your-mpesa-passkey
MPESA_SHORT_CODE=174379
MPESA_BASE_URL=https://sandbox.safaricom.co.ke
MPESA_CALLBACK_BASE_URL=https://erp.masterspace.co.ke/api/mpesa/callback/
MPESA_INITIATOR_NAME=your-initiator-name
MPESA_INITIATOR_PASSWORD=your-initiator-password

# Card Payment (Stripe) Configuration
STRIPE_API_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# KRA eTIMS Configuration
KRA_MODE=sandbox
KRA_BASE_URL=https://api.sandbox.kra.go.ke
KRA_PIN=your-kra-pin
KRA_CLIENT_ID=your-kra-client-id
KRA_CLIENT_SECRET=your-kra-client-secret
KRA_USERNAME=your-kra-username
KRA_PASSWORD=your-kra-password

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION_HOURS=24

# Celery
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# File Upload
MAX_UPLOAD_SIZE=52428800
ALLOWED_UPLOAD_EXTENSIONS=pdf,doc,docx,xls,xlsx,csv,png,jpg,jpeg,gif

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Feature Flags
FEATURE_MPESA_ENABLED=True
FEATURE_CARD_PAYMENT_ENABLED=True
FEATURE_KRA_ENABLED=True